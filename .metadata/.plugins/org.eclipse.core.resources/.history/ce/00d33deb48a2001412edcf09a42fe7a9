			writer.close();
			 BufferedReader file = new BufferedReader(new FileReader("html.txt"));
			 
			 int linecount = 0; int s = 0;
	         String line;
	         
			while (( line = file.readLine()) != null)
	         {
	             linecount++;
	             int indexforFirma = line.indexOf("sikayetDetayNavigasyon");
