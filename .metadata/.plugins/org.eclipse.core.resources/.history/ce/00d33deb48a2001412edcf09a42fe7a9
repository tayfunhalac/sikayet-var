	             if (indexfound > -1) 
	             {
	                 for(int x = 0; x<3; x++)
	                 {
	                	 line = file.readLine();
	                 }
	                 url[s] =line.substring(line.indexOf("/")+1,line.indexOf(">")-1);
	                 s++;
	                
	             }
	         }
	         
	         File f = new File("html.txt");
	         f.delete();
	         
	         httpClient.stop();
	         
		} 
		catch (Exception e) 
		{
			e.printStackTrace();
