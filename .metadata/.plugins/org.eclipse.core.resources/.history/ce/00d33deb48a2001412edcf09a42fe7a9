	             }
	             else if (indexforCevap > -1) 
	             {
	            	 line = file.readLine();
	            	 line = file.readLine();
	                 cevap[s] = line.substring(line.indexOf("p>")+2,line.indexOf("</div"));
	                 String ss = cevap[s];
	                 System.out.println(ss);
	                 s++;
	             }
		     }	
				
			File f = new File("html.txt");
		         
